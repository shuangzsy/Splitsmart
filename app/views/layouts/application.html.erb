<!DOCTYPE html>
<html>
  <head>
    <title>Splitsmart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = {
          id: <%=current_user.id%>,
          email: "<%=current_user.email%>",
          username: "<%=current_user.username%>"
        }
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
